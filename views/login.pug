extends layout
block append head
  link(rel='stylesheet', href='/stylesheets/login.css')

block content
  form(method="POST" action="/users/login")
    h1 Login
    if error
      #error
        span
          p.text-danger Incorrect Username or Password

    div.login
      input#username(type="text", name="username", placeholder="Username" required)
      input#password(type="password", name="password", placeholder="Password" required)
      input(type="submit", value="Login")
    div.options
      div.container
        div.checkbox
          input#remember(type="checkbox", name="remember")
          label(for="remember") Remember Me
      div.container
        a(href="#") Forgot Password?
    div.create
      p Or
      a(href="/users/signup", id="create") Create an account now!