extends layout
block append head
  link(rel='stylesheet', href='/stylesheets/login.css')

block content
  form(method="POST" action="/users/signup")
    h1 Signup
    if error
      #error
        span
          if error.message
            p.text-danger= error.message
          else
            p.text-danger Invalid email, password, or username
    if success
      #success
        span
          p.text-success Successfully created account

    div.login
      input#email(type="email", name="email", placeholder="Email" required)
      input#username(type="text", name="username", placeholder="Username" required)
      input#password(type="password", name="password", placeholder="Password" required)
      input(type="submit", value="Signup")
    div.create
      p Already have an account?
      a(href="/users/login", id="create") Login Now!