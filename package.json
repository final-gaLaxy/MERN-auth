{
  "name": "user-authentication",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "shx rm -rf ./client/build",
    "clean:server": "shx rm -rf ./server/build",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build && shx cp -r build ../server/build/",
    "server:dev": "cd server && npm run dev",
    "server:prod": "cd server && npm run prod",
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\"",
    "prod": "npm run clean && npm run client:build && npm run server:prod"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "shx": "^0.3.4"
  }
}
